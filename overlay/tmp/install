#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add postgres user.
#======================================================================================================================

bf-echo "Adding user 'postgres'..."
bf-adduser postgres


#======================================================================================================================
# Add postgres dependencies.
#======================================================================================================================

bf-echo "Installing PostgreSQL dependencies..."
apk --no-cache add \
    busybox \
    icu-libs \
    libcrypto1.1 \
    libldap \
    libpq \
    libssl1.1 \
    libxml2 \
    musl \
    postgresql-common \
    tzdata


#======================================================================================================================
# Make upgrade script executable.
#======================================================================================================================

bf-echo "Make upgrade script executable..."
chmod +x /upgrade


#======================================================================================================================
# Add upgrade data directory.
#======================================================================================================================

mkdir /data-new
bf-ch -o postgres /data-new
